<main class='bg-dark' id='insert-page'>
    <div class="jumbotron jumbotron-fluid bg-dark text-center pt-5 pb-3 mb-0">
        <div class="container text-light">
          <h1 class="display-4">Song Database</h1>
          <p class="lead my-3">Create your own database of your favorite songs.</p>
          <p>Insert a song by entering a title, artist and genre.</p>
        </div>
    </div>
    <form class='text-light mx-5' method='POST' action='/insert'>
        <div class='container'>
            <div class='col-md-8 mx-auto'>
                <div class="form-group">
                    <label for="insert-title">Title</label>
                    <input type="text" class="form-control" id="insert-title" name='title'>
                </div>
                <div class="form-group">
                    <label for="insert-artist">Artist</label>
                    <input type="text" class="form-control" id="insert-artist" name='artist'>
                </div>
                <div class="form-group">
                    <label for="insert-genre">Genre</label>
                    <input type="text" class="form-control" id="insert-genre" name='genre'>
                </div>
                <button id='insert-btn' type="submit" class="btn btn-success px-5">Insert</button>
            </div>
        </div>
    </form>

    <div class='text-light'>
        <p id='insert-msg'></p>
    </div>
</main>